  <animation>
    <type>rotate</type>
    <object-name>off-flag</object-name>
    <property>b707/ess-bus</property>
		<interpolation>
		  <entry>
		    <ind>0.0</ind>
		    <dep>-39</dep>
		  </entry>
		  <entry>
		    <ind>12</ind>
		    <dep>-39</dep>
		  </entry>
		  <entry>
		    <ind>12.1</ind>
		    <dep>-37</dep>
		  </entry>
		  <entry>
		    <ind>24</ind>
		    <dep>31</dep>
		  </entry>
		</interpolation>   
		<center>
		 <x-m>0.0</x-m>
		 <y-m>0.032</y-m>
		 <z-m>0.037</z-m>
		</center>
		<axis>
		 <x>1</x>
		 <y>0</y>
		 <z>0</z>
		</axis>
  </animation>

  <animation>
    <type>rotate</type>
    <object-name>sphere</object-name>
    <property>orientation/roll-deg</property>
    <center>
      <x-m>0.0</x-m>
      <y-m>0.0</y-m>
      <z-m>0.0</z-m>
    </center>
    <axis><x>1</x></axis>
  </animation>
  <animation>
    <type>rotate</type>
    <object-name>sphere</object-name>
    <property>orientation/pitch-deg</property>
    <center>
      <x-m>0.0</x-m>
      <y-m>0.0</y-m>
      <z-m>0.0</z-m>
    </center>
    <axis><y>1</y></axis>
  </animation>
  <animation>
    <type>rotate</type>
    <object-name>bank-index</object-name>
    <property>orientation/roll-deg</property>
    <center>
      <x-m>0.0</x-m>
      <y-m>0.0</y-m>
      <z-m>0.0</z-m>
    </center>
    <axis><x>-1</x></axis>
  </animation>
  
	<animation>
		<type>select</type>
		<object-name>off-nav</object-name>
		<condition>
		  <or>
		    <not><property>/instrumentation/nav[0]/nav-loc</property></not>
				<and>
				  <property>/instrumentation/nav[0]/nav-loc</property>
				  <not><property>/instrumentation/nav[0]/in-range</property></not>
				</and>
			</or>
		</condition>
	</animation>

	<animation>
		<type>select</type>
		<object-name>gs-scale</object-name>
		<condition>
		  <or>
		    <not><property>/instrumentation/nav[0]/nav-loc</property></not>
				<and>
				  <property>/instrumentation/nav[0]/nav-loc</property>
				  <not><property>/instrumentation/nav[0]/gs-in-range</property></not>
				</and>
			</or>
		</condition>
	</animation>
  
	<animation>
		<type>select</type>
		<object-name>ZR.Alt</object-name>
		<condition>
		  <!--><and>
		    <property>/instrumentation/nav[0]/nav-loc</property>-->
		  <property>/instrumentation/nav[0]/in-range</property>
		  <property>/instrumentation/nav[0]/has-gs</property>
		  <!--</and>-->
		</condition>
	</animation>

	<animation>
		<type>rotate</type>
		<object-name>ZR.Alt</object-name>
		<property>/instrumentation/nav[0]/gs-needle-deflection</property>
		<interpolation>
		  <entry><ind>-400</ind><dep>-30</dep></entry>
		  <entry><ind> -10</ind><dep>-30</dep></entry>
		  <entry><ind>   0</ind><dep>  0</dep></entry>
		  <entry><ind>  10</ind><dep> 30</dep></entry>
		  <entry><ind> 400</ind><dep> 30</dep></entry>
		</interpolation>
		<axis>
		  <x>0</x>
		  <y>-1</y>
		  <z>0</z>
		</axis>
		<center>
		  <x-m>0</x-m>
		  <y-m>0</y-m>
		  <z-m>0</z-m>
		</center>
	</animation>

	<animation>
		<type>select</type>
		<object-name>ZR.Azi</object-name>
		<condition>
			<or>
				<and>
					<not><property>/instrumentation/nav[0]/nav-loc</property></not>
					<property>/instrumentation/nav[0]/in-range</property>
					<less-than>
						<property>/instrumentation/nav[0]/nav-distance</property>
						<value>45000</value>
					</less-than>
				</and>				
				<and>
					<property>/instrumentation/nav[0]/nav-loc</property>
					<property>/instrumentation/nav[0]/in-range</property>
				</and>					
			</or>
		</condition>
	</animation>

	<animation>
		<type>rotate</type>
		<object-name>ZR.Azi</object-name>
		<property>/instrumentation/nav[0]/heading-needle-deflection</property>
		<interpolation>
		  <entry><ind>-10</ind><dep>-30</dep></entry>
		  <entry><ind>  0</ind><dep>  0</dep></entry>
		  <entry><ind> 10</ind><dep> 30</dep></entry>
		</interpolation>
		<axis>
		  <x>0</x>
		  <y>0</y>
		  <z>1</z>
		</axis>
		<center>
		  <x-m>0</x-m>
		  <y-m>0</y-m>
		  <z-m>0</z-m>
		</center>
	</animation>
	
	<animation>
		<type>translate</type>
		<object-name>reticl</object-name>
		<property>/instrumentation/attitude-indicator/horizon-offset-deg</property>
		<factor>0.001</factor>
		<axis>
		  <x>0</x>
		  <y>0</y>
		  <z>1</z>
		</axis>
	</animation>

	<animation>
		<type>rotate</type>
		<object-name>adi-knob</object-name>
		<property>/instrumentation/attitude-indicator/horizon-offset-deg</property>
		<factor>25</factor>
		<center>
		  <x-m>0</x-m>
		  <y-m>0.041</y-m>
		  <z-m>-0.0389</z-m>
		</center>
		<axis>
		  <x>-1</x>
		  <y>0</y>
		  <z>0</z>
		</axis>
	</animation>

	<animation>
		<type>pick</type>
		<object-name>adi-knob</object-name>
		<visible>true</visible>
		  <action>
		    <name>calibrate reset</name>
		    <button>0</button>
		    <repeatable>false</repeatable>
		    <binding>
		      <command>property-assign</command>
		      <property>/instrumentation/attitude-indicator/horizon-offset-deg</property>
		      <value>0</value>
		    </binding>
		  </action>      
		  <action>
		    <name>calibrate fine dec</name>
		    <button>3</button>
		    <repeatable>true</repeatable>
		    <binding>
		      <command>property-adjust</command>
		      <property>/instrumentation/attitude-indicator/horizon-offset-deg</property>
		      <step>-0.1</step>
		      <min>-5</min>
		      <max>5</max>
		      <wrap>false</wrap>
		    </binding>
		  </action>
		  <action>
		    <name>calibrate fine inc</name>
		    <button>4</button>
		    <repeatable>true</repeatable>
		    <binding>
		      <command>property-adjust</command>
		      <property>/instrumentation/attitude-indicator/horizon-offset-deg</property>
		      <step>0.1</step>
		      <min>-5</min>
		      <max>5</max>
		      <wrap>false</wrap>
		    </binding>
		  </action>
	</animation>
	
	<!-- dir -->
		<animation>
		<type>translate</type>
		<object-name>ai-dir</object-name>
		<property>/instrumentation/attitude-indicator/dir-offset-deg</property>
		<factor>0.001</factor>
		<axis>
		  <x>0</x>
		  <y>1</y>
		  <z>0</z>
		</axis>
	</animation>

	<animation>
		<type>rotate</type>
		<object-name>dir-knob</object-name>
		<property>/instrumentation/attitude-indicator/dir-offset-deg</property>
		<factor>25</factor>
		<center>
		  <x-m>0</x-m>
		  <y-m>-0.037</y-m>
		  <z-m>-0.039</z-m>
		</center>
		<axis>
		  <x>-1</x>
		  <y>0</y>
		  <z>0</z>
		</axis>
	</animation>

	<animation>
		<type>pick</type>
		<object-name>dir-knob</object-name>
		<visible>true</visible>
		  <action>
		    <name>calibrate reset d</name>
		    <button>0</button>
		    <repeatable>true</repeatable>
		    <binding>
		      <command>property-assign</command>
		      <property>/instrumentation/attitude-indicator/dir-offset-deg</property>
		      <value>0</value>
		    </binding>
		  </action>      
		  <action>
		    <name>calibrate fine dec d</name>
		    <button>3</button>
		    <repeatable>true</repeatable>
		    <binding>
		      <command>property-adjust</command>
		      <property>/instrumentation/attitude-indicator/dir-offset-deg</property>
		      <step>-0.1</step>
		      <min>-5</min>
		      <max>5</max>
		      <wrap>false</wrap>
		    </binding>
		  </action>
		  <action>
		    <name>calibrate fine inc d</name>
		    <button>4</button>
		    <repeatable>true</repeatable>
		    <binding>
		      <command>property-adjust</command>
		      <property>/instrumentation/attitude-indicator/dir-offset-deg</property>
		      <step>0.1</step>
		      <min>-5</min>
		      <max>5</max>
		      <wrap>false</wrap>
		    </binding>
		  </action>
	</animation>

  <animation>
    <type>range</type>
    <min-m>0</min-m>
    <max-m>15</max-m>
  </animation>

<!-- TEXT OSG -->
  <text>
    <name>textosg</name>
    <type type="string">literal</type>
    <text type="string">AI</text>
    <draw-text type="bool">true</draw-text>
    <font>Helvetica.txf</font>
    <character-size type="double">0.014</character-size>
    <character-aspect-ratio type="double">1.0</character-aspect-ratio>
    <axis-alignment>yz-plane</axis-alignment>
    <max-height>0.06</max-height>
    <max-width>0.05</max-width>
    <font-resolution>
      <width type="int">64</width>
      <height type="int">64</height>
    </font-resolution>
    <alignment>center-center</alignment>
    <offsets>
      <x-m>  0.045 </x-m>
      <y-m>  0.000 </y-m>
      <z-m>  0.000 </z-m>
    </offsets>
  </text>

  <animation>
    <type>material</type>
    <object-name>textosg</object-name>
    <emission>
      <red>   0.8 </red>
      <green> 0.8 </green>
      <blue>  0.0 </blue>
    </emission>
  </animation>

  <animation>
    <type>select</type>
    <object-name>textosg</object-name>
    <condition>
      <property>sim/panel-hotspots</property>
    </condition>
  </animation>

 <!--########## Cone de lumiÃ¨re Rembrandt #############-->
 
 <animation>
    <name>BackLightAnimation</name>
    <type>light</type>
    <light-type>spot</light-type>
    <object-name>backlight</object-name>
    <position>
      <x> 0.16 </x>
      <y> 0.00 </y>
      <z>-0.45</z>
    </position>
    <direction>
      <x>  0.0 </x>
      <y>  0.0 </y>
      <z>  1.0 </z>
    </direction>
    <ambient>
      <r>  0.0 </r>
      <g>  0.0 </g>
      <b>  0.0 </b>
      <a>  1.0 </a>
    </ambient>
    <diffuse>
      <r>  0.5 </r>
      <g>  0.404 </g>
      <b>  0.2 </b>
      <a>  1.0 </a>
    </diffuse>
    <specular>
      <r>  0.0 </r>
      <g>  0.0 </g>
      <b>  0.0 </b>
      <a>  1.0 </a>
    </specular>
    <dim-factor>
      <property>systems/electrical/outputs/instrument-lights</property>
      
      <factor>0.04</factor>
      <offset>0</offset>
      <min>0</min>
      <max>1</max>
  
    </dim-factor>
    <attenuation>
      <c>  0.2 </c>
      <l>  0.2 </l>
      <q>  0.4 </q>
    </attenuation>
    <exponent> 8.0 </exponent>
    <cutoff> 48.0 </cutoff>
    <near-m> 0.0 </near-m>
    <far-m> 0.49 </far-m>
  </animation>

  <animation>
    <type>select</type>
    <object-name>BackLightAnimation</object-name>
    <condition>
      <and>
        <property>controls/electric/battery-switch</property>
        <property>sim/rendering/rembrandt/enabled</property>
      </and>
    </condition>
  </animation>

</PropertyList>
