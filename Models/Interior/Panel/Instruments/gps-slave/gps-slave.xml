<?xml version="1.0"?>

<PropertyList>

<path>swap-nav.ac</path>

<animation>
  <type>material</type>
  <object-name>SwDevFreq</object-name>
  <emission>
    <red>0.005</red>
    <green>0.005</green>
    <blue>0.005</blue>
    <factor-prop>/systems/electrical/outputs/instrument-lights-norm</factor-prop>
  </emission>
</animation>

<animation>
  <type>material</type>
  <object-name>SwDevFreq</object-name>
  <emission>
    <red>0.05</red>
    <green>0.025</green>
    <blue>0.0125</blue>
    <factor-prop>/systems/electrical/outputs/instrument-lights-norm</factor-prop>
  </emission>
</animation>

<animation>
  <type>material</type>
  <object-name>Placard</object-name>
  <emission>
      <red>0.256</red>
      <green>0.128</green>
      <blue>0.064</blue>
      <factor-prop>/systems/electrical/outputs/instrument-lights-norm</factor-prop>
  </emission>
</animation>

<animation>
  <type>rotate</type>
  <object-name>SwDevFreq</object-name>
   <condition>
    <equals>
     <property>/instrumentation/nav/slaved-to-gps</property>
     <value>true</value>
    </equals>
   </condition> 
 <factor>25</factor>
  <center>
    <x-m>0.0</x-m>
    <y-m>0.0</y-m>
    <z-m>0.012</z-m>
  </center>
  <axis>
    <x>0.0</x>
    <y>1.0</y>
    <z>0.0</z>
  </axis>
</animation>

<animation>
  <type>rotate</type>
  <object-name>SwDevFreq</object-name>
  <condition>
    <equals>
     <property>/instrumentation/nav/slaved-to-gps</property>
     <value>false</value>
    </equals>
   </condition> 
 <factor>-25</factor>
  <center>
    <x-m>0.0</x-m>
    <y-m>0.0</y-m>
    <z-m>0.012</z-m>
  </center>
  <axis>
    <x>0.0</x>
    <y>1.0</y>
    <z>0.0</z>
  </axis>
</animation>

