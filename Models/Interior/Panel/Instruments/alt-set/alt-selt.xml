  <animation>
    <type>rotate</type>
    <object-name>alt.knob</object-name>
    <property>autopilot/settings/target-altitude-ft</property>
    <factor>5</factor>
    <center>
      <x-m>0.01052</x-m>
      <y-m>0.03804</y-m>
      <z-m>0.01113</z-m>
    </center>
    <axis>
      <x>-1</x>
      <y>0</y>
      <z>0</z>
    </axis>
  </animation>

  <animation>
    <type>knob</type>
    <object-name>alt.knob</object-name>
    <action>
      <binding>
        <command>property-adjust</command>
        <property>autopilot/settings/target-altitude-ft</property>
        <factor>100</factor>
        <min>1000</min>
        <max>50000</max>
        <wrap>false</wrap>
      </binding>
    </action>
    <hovered>
      <binding>
        <command>set-tooltip</command>
        <tooltip-id>ap-alt-setting</tooltip-id>
        <label>AP Altitude: %.0f</label>
        <property>autopilot/settings/target-altitude-ft</property>
      </binding>
    </hovered>   
  </animation>

  <animation>
    <type>pick</type>
    <object-name>alt.up</object-name>
    <visible>false</visible>
    <action>
      <button>0</button>
      <repeatable>true</repeatable>
      <interval-sec>0.2</interval-sec>
      <binding>
        <command>property-adjust</command>
        <property>autopilot/settings/target-altitude-ft</property>
        <step>100</step>
        <min>1000</min>			
        <max>30000</max>
        <wrap>false</wrap>
      </binding>           
    </action>
  </animation>

  <animation>
    <type>pick</type>
    <object-name>alt.dwn</object-name>
    <visible>false</visible>
    <action>
      <button>0</button>
      <repeatable>true</repeatable>
      <interval-sec>0.2</interval-sec>
      <binding>
        <command>property-adjust</command>
        <property>autopilot/settings/target-altitude-ft</property>
        <step>-100</step>
        <min>1000</min>			
        <max>30000</max>
        <wrap>false</wrap>
      </binding>           
    </action>
  </animation>

  <animation>
    <type>pick</type>
    <object-name>alt.up</object-name>
    <action>
      <button>1</button>
      <repeatable>true</repeatable>
      <interval-sec>0.2</interval-sec>
      <binding>
        <command>property-adjust</command>
        <property>autopilot/settings/target-altitude-ft</property>
        <step>1000</step>
        <min>1000</min>			
        <max>30000</max>
        <wrap>false</wrap>
      </binding>           
    </action>
  </animation>

  <animation>
    <type>pick</type>
    <object-name>alt.dwn</object-name>
    <action>
      <button>1</button>
      <repeatable>true</repeatable>
      <interval-sec>0.2</interval-sec>
      <binding>
        <command>property-adjust</command>
        <property>autopilot/settings/target-altitude-ft</property>
        <step>-1000/</step>
	<min>1000</min>			
	<max>30000</max>
        <wrap>false</wrap>
      </binding>           
    </action>
  </animation>
  
  
<!--VerticalSpeedSet-->
  <animation>
    <type>rotate</type>
    <object-name>vs.knob</object-name>
    <property>autopilot/settings/vertical-speed-fpm</property>
    <factor>5</factor>
    <center>
      <x-m>0.01052 </x-m>
      <y-m>0.03804</y-m>
      <z-m>-0.01035</z-m>
    </center>
    <axis>
      <x>-1</x>
      <y>0</y>
      <z>0</z>
    </axis>
  </animation>

  <animation>
    <type>knob</type>
    <object-name>vs.knob</object-name>
    <action>
      <binding>
        <command>property-adjust</command>
        <property>autopilot/settings/vertical-speed-fpm</property>
        <factor>100</factor>
        <min>-6000</min>
        <max>6000</max>
        <wrap>false</wrap>
      </binding>
    </action>
    <hovered>
      <binding>
        <command>set-tooltip</command>
        <tooltip-id>ap-vs-setting</tooltip-id>
        <label>AP Vertical Speed: %.0f</label>
        <property>autopilot/settings/vertical-speed-fpm</property>
      </binding>
    </hovered>   
  </animation>

  <animation>
    <type>pick</type>
    <object-name>vs.up</object-name>
    <visible>false</visible>
    <action>
      <button>0</button>
      <repeatable>true</repeatable>
      <interval-sec>0.2</interval-sec>            
      <binding>
        <command>property-adjust</command>
        <property>autopilot/settings/vertical-speed-fpm</property>
        <step>100</step>
	<min>-6000</min>			
	<max>6000</max>
	<wrap>false</wrap>
      </binding>                      
    </action>
  </animation>
  
  <animation>
    <type>pick</type>
    <object-name>vs.dwn</object-name>
    <visible>false</visible>
    <action>
      <button>0</button>
      <repeatable>true</repeatable>
      <interval-sec>0.2</interval-sec>            
      <binding>
        <command>property-adjust</command>
	<property>/autopilot/settings/vertical-speed-fpm</property>
	<step>-100</step>
	<min>-6000</min>			
	<max>6000</max>
	<wrap>false</wrap>
      </binding>           
    </action>
  </animation>

<!-- TEXT OSG -->
  <text>
    <name>textosg</name>
    <type type="string">literal</type>
    <text type="string">Alt select </text>
    <draw-text type="bool">true</draw-text>
    <font>Helvetica.txf</font>
    <character-size type="double">0.014</character-size>
    <character-aspect-ratio type="double">1.0</character-aspect-ratio>
    <axis-alignment>yz-plane</axis-alignment>
    <max-height>0.06</max-height>
    <max-width>0.05</max-width>
    <font-resolution>
      <width type="int">64</width>
      <height type="int">64</height>
    </font-resolution>
    <alignment>center-center</alignment>
    <offsets>
      <x-m>  0.025 </x-m>
      <y-m>  -0.005 </y-m>
      <z-m>  0.005 </z-m>
    </offsets>
  </text>

  <animation>
    <type>material</type>
    <object-name>textosg</object-name>
    <emission>
      <red>   0.8 </red>
      <green> 0.8 </green>
      <blue>  0.0 </blue>
    </emission>
  </animation>

  <animation>
    <type>select</type>
    <object-name>textosg</object-name>
    <condition>
      <property>sim/panel-hotspots</property>
    </condition>
  </animation>

 </PropertyList>
