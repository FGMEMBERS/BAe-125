<?xml version="1.0" encoding="UTF-8"?>
<PropertyList>

    <path>alt-selt.ac</path>

    <animation>
        <type>material</type>        
        <object-name>alt.10000</object-name>
        <object-name>alt.1000</object-name>
        <object-name>alt.100</object-name>
        <object-name>alt.10</object-name>
        <object-name>alt.1</object-name>
        <object-name>vs.minus</object-name>
        <object-name>vs.1000</object-name>
        <object-name>vs.100</object-name>
        <object-name>vs.10</object-name>
        <object-name>vs.1</object-name>
        <object-name>AltSet.cancel</object-name>

  
        <emission>
            <red>0.7</red>
            <green>0.4</green>
            <blue>0.4</blue>
            <factor-prop>systems/electrical/outputs/instrument-lights</factor-prop>
        </emission>
    </animation>

     <animation>
       	  <type>material</type>
          <object-name>alt.knob</object-name>
          <object-name>vs.knob</object-name>
          <object-name>AltSet.cancel</object-name>
		<condition>
			<not><property>/sim/rendering/rembrandt/enabled</property></not>
			<property>systems/electrical/outputs/instrument-lights</property>
		</condition>
		<emission>
		  <red>0.8</red>
		  <green>0.8</green>
		  <blue>0.8</blue>
		  <factor-prop>systems/electrical/outputs/instrument-lights</factor-prop>
		</emission>
	</animation>


    <animation>
        <type>material</type>
        <object-name>alt.knob</object-name>        
        <object-name>vs.knob</object-name>
        <object-name>ias.knob</object-name>
        <object-name>AltSet.cancel</object-name>       
        <object-name>alt.10000</object-name>
        <object-name>alt.1000</object-name>
        <object-name>alt.100</object-name>
        <object-name>alt.10</object-name>
        <object-name>alt.1</object-name>
        <object-name>vs.minus</object-name>
        <object-name>vs.1000</object-name>
        <object-name>vs.100</object-name>
        <object-name>vs.10</object-name>
        <object-name>vs.1</object-name>
   
        <condition>
            <greater-than>
                <property>systems/electrical/outputs/nav</property>
                <value>1</value>
            </greater-than>
        </condition>
    </animation>
    
<!--ALT display-->
    <animation>
        <type>textranslate</type>
        <object-name>alt.10000</object-name>
        <property>autopilot/settings/target-altitude-ft</property>
        <factor>0.00001</factor>
        <step>10000</step>
        <axis>
            <x>0</x>
            <y>1</y>
            <z>0</z>
        </axis>
    </animation>

    <animation>
        <type>textranslate</type>
        <object-name>alt.1000</object-name>
        <property>autopilot/settings/target-altitude-ft</property>
        <factor>0.0001</factor>
        <step>1000</step>
        <axis>
            <x>0</x>
            <y>1</y>
            <z>0</z>
        </axis>
    </animation>

    <animation>
        <type>textranslate</type>
        <object-name>alt.100</object-name>
        <property>autopilot/settings/target-altitude-ft</property>
        <factor>0.001</factor>
        <step>100</step>
        <axis>
            <x>0</x>
            <y>1</y>
            <z>0</z>
        </axis>
    </animation>

    <animation>
        <type>textranslate</type>
        <object-name>alt.10</object-name>
        <property>autopilot/settings/target-altitude-ft</property>
        <factor>0.01</factor>
        <step>10</step>
        <axis>
            <x>0</x>
            <y>1</y>
            <z>0</z>
        </axis>
    </animation>

    <animation>
        <type>textranslate</type>
        <object-name>alt.1</object-name>
        <property>autopilot/settings/target-altitude-ft</property>
        <factor>0.1</factor>
        <step>1</step>
        <axis>
            <x>0</x>
            <y>1</y>
            <z>0</z>
        </axis>
    </animation>   
    
 <!--VS display-->
	<animation>
		<type>select</type>
		<object-name>vs.minus</object-name>
		<condition>            
			<less-than>
				<property>autopilot/settings/vertical-speed-fpm</property>
				<value>0</value>
			</less-than>           
		</condition>
	</animation>
  
	<animation>
		<type>textranslate</type>
		<object-name>vs.1000</object-name>
		<property>autopilot/settings/vertical-speed-abs</property>
		<factor>0.0001</factor>
		<step>1000</step>
		<axis>
			<x>0</x>
			<y>1</y>
			<z>0</z>
	        </axis>
	</animation>
  
	<animation>
		<type>textranslate</type>
		<object-name>vs.100</object-name>
		<property>autopilot/settings/vertical-speed-abs</property>
		<factor>0.001</factor>
		<step>100</step>
		<axis>
			<x>0</x>
			<y>1</y>
			<z>0</z>
		</axis>
	</animation>

	<animation>
        <type>textranslate</type>
	<object-name>vs.10</object-name>
		<property>autopilot/settings/vertical-speed-abs</property>
		<factor>0.01</factor>
		<step>10</step>
		<axis>
			<x>0</x>
			<y>1</y>
			<z>0</z>
		</axis>
	</animation>

	<animation>
		<type>textranslate</type>
		<object-name>vs.1</object-name>
		<property>autopilot/settings/vertical-speed-abs</property>
		<factor>0.1</factor>
		<step>1</step>
		<axis>
			<x>0</x>
			<y>1</y>
			<z>0</z>
		</axis>
	</animation>
    
  
